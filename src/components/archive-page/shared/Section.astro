---
interface Props {
  title: string;
  size?: "full" | "medium";
}

const { title, size } = Astro.props;
---

<section
  class:list={[
    "flex flex-col gap-10 lg:gap-20 text-center",
    { "max-w-6xl mx-auto": size === "medium" },
    { "w-full items-center": size === "full" },
  ]}
>
  <h2 class="text-4xl md:text-6xl uppercase font-tomaso">
    {title}
  </h2>

  <slot />
</section>
