---
import NavBar from "~/components/global/navbar/NavBar.astro";
import "@fontsource-variable/onest";
import { ViewTransitions } from "astro:transitions";
import Footer from "~/components/global/footer/Footer.astro";

interface Props {
  titlePage: string;
  subtitle?: string;
  description: string;
}

const { titlePage, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/images/brand/favicon.svg" />
    <title>{titlePage} - Premios ESLAND 2024</title>
    <ViewTransitions />
  </head>
  <body class="overflow-x-hidden">
    <NavBar />
    <slot />
    <Footer />

    <style is:global>
      /** Fonts */
      @font-face {
        font-family: "Tomaso";
        font-style: normal;
        font-weight: normal;
        font-display: swap;
        src: url("/fonts/tomaso.woff2") format("woff2");
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
          U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC,
          U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
      }

      :root {
        color-scheme: dark;
      }

      html {
        background: #151a36;
        font-family: "Onest Variable";
      }

      .section {
        @apply mx-auto my-44 px-12;
      }

      p {
        color: rgba(255, 255, 255, 0.9);
        line-height: 1.4;
        font-weight: 100;
        font-size: 1em;
        letter-spacing: 0.5px;
        text-wrap: pretty;
      }

      p strong {
        color: white;
        font-weight: 700;
      }
    </style>
  </body>
</html>
